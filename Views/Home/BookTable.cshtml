@model IEnumerable<mysql_connect.Models.Book>
@{
    ViewData["Title"] = "Book Table";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    
</div>
<section class="section mb-2">
    <!-- <button class=" btn btn-primary" data-bs-toggle="modal" data-bs-target=>Add +</button> -->
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Add Product</button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form>
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <section class="form-group">
                            <label class="form-label">Book Names</label>
                            <input type="text" class="form-control" name="c.name" placeholder="Please input book names" value="" required>
                        </section>
                        <section class="form-group">
                            <label class="form-label">Author</label>
                            <input type="text" class="form-control" name="author" placeholder="Please input author names" value="" required>
                        </section>
                        <section class="form-group">
                            <label class="form-label">Price</label>
                            <input type="text" class="form-control" name="price" placeholder="Please input price" value="" required>
                        </section>
                        <section class="form-group">
                            <label class="form-label">Synopsis</label>
                            <input type="text" class="form-control" name="synopsis" placeholder="Please input synopsis" value="" required>
                        </section>
                        <section class="form-group">
                            <label class="form-label">input gambar</label>
                            <input type="file" class="form-control" name="image">
                        </section>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>
<div class="col-lg-12 obj-center primary-color">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Book Names</th>
                <th scope="col">Author</th>
                <th scope="col">Price</th>
                <th scope="col">Synopsis</th>
                <th scope="col">Image</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            
            @foreach (var list in Model)
            {
                <tr>
                    <th scope="row">@Html.DisplayFor(modelItem => list.no)</th>
                    <td>@Html.DisplayFor(modelItem => list.judulbuku)</td>
                    <td>@Html.DisplayFor(modelItem => list.pengarang)</td>
                    <td>@Html.DisplayFor(modelItem => list.penerbit)</td>
                    <td>@Html.DisplayFor(modelItem => list.kategori)</td>
                    <td>@Html.DisplayFor(modelItem => list.gambar)</td>
                    <td>
                        <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#edit@list.no">edit Product</button>
                        <button class=" btn btn-secondary" data-bs-toggle="modal">Delete</button>
                    </td>
                </tr>
                <!-- Modal -->
                <div class="modal fade" id="edit@list.no" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form>
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <input type="hidden" asp-for="@list.no" />
                                    <section class="form-group">
                                        <label class="form-label">Book Names</label>
                                        <input type="text" class="form-control" name="c.name" placeholder="Please input book names" value="" required>
                                    </section>
                                    <section class="form-group">
                                        <label class="form-label">Author</label>
                                        <input type="text" class="form-control" name="author" placeholder="Please input author names" value="" required>
                                    </section>
                                    <section class="form-group">
                                        <label class="form-label">Price</label>
                                        <input type="text" class="form-control" name="price" placeholder="Please input price" value="" required>
                                    </section>
                                    <section class="form-group">
                                        <label class="form-label">Synopsis</label>
                                        <input type="text" class="form-control" name="synopsis" placeholder="Please input synopsis" value="" required>
                                    </section>
                                    <section class="form-group">
                                        <label class="form-label">input gambar</label>
                                        <input type="file" class="form-control" name="image">
                                    </section>

                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary">Save changes</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            }
            

        </tbody>
    </table>
</div>

